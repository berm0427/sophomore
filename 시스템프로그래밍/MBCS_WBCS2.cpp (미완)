#define UNICODE
#define _UNICODE

#include <stdio.h>
#include <tchar.h>
#include <windows.h>

int _tmain(int argc, TCHAR* argv[])
{
	LPTSTR str1 = _T("MBCS or WBCS 1");
	TCHAR str2[] = _T("MBCS or WBCS 2");
	TCHAR str3[100];
	TCHAR str4[50];

	LPCTSTR pStr = str1;
	_tprintf(_T("string size: %d /n"), sizeof(str2)/*연산자라 변화가 없음*/);
	_tprintf(_T("string length: %d /n"), _tcslen(pStr));


	return 0;
}
